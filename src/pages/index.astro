---
import Nav from "../components/astro/Nav.astro";
import Hero from "../components/astro/Hero.astro";
import ScrollDownButton from "../components/astro/ScrollDownButton.astro";
import TechnologiesSlider from "../components/astro/TechnologiesSlider.astro";
import About from "../components/astro/About.astro";
import Projects from "../components/astro/Projects.astro";
import Contact from "../components/astro/Contact.astro";
import Footer from "../components/astro/Footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<Nav />
		<Hero />
		<ScrollDownButton />
		<TechnologiesSlider />
		<About class="mt-48" />
		<Projects class="mt-48" />
		<Contact class="mt-16" />
		<Footer class="mt-16" />
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

	body {
		font-family: "Poppins", sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
		scroll-behavior: smooth;
	}

	.inter-tight {
		font-family: "Inter Tight", sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
	}

	.poppins {
		font-family: "Poppins", sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
	}

	.container {
		@apply mx-auto px-4 max-w-3xl;
	}

	.container-wide {
		@apply mx-auto px-4 max-w-5xl;
	}
</style>
