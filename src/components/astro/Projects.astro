---
import ColorBlob from "../svg/ColorBlob.astro";
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<a id="projects"></a>
<div class={`${className} bg-[#1A1A1A] py-24 inter-tight relative -z-20 overflow-hidden`}>
	<ColorBlob class="absolute bottom-0 left-0 -translate-x-1/4 translate-y-1/2 -z-10 overflow-hidden" />
	<div class="w-fit mx-auto z-10">
		<p class="text-neutral-500 text-center medium leading-none">EXPLORE ALL OF</p>
		<h1
			class="text-center bg-gradient-to-r from-white to-indigo-300 bg-clip-text text-transparent text-[48px] lg:text-[64px] font-bold leading-tight"
		>
			My Projects
		</h1>
	</div>
	<div>
		<div class="flex items-center gap-8 justify-left mt-8 z-10 mx-4">
			<div class="bg-[#474747] rounded-lg w-1/4 aspect-[5/6]"></div>
			<div class="bg-[#474747] rounded-lg w-1/4 aspect-[5/6]"></div>
			<div class="bg-[#474747] rounded-lg w-1/4 aspect-[5/6]"></div>
			<div class="bg-[#474747] rounded-lg w-1/4 aspect-[5/6]"></div>
			<div class="bg-[#474747] rounded-lg w-1/4 aspect-[5/6]"></div>
		</div>
	</div>
</div>
